{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pastelvg.github.io/specification/schema/pastelvg.schema.json",
  "title": "PastelVG",
  "type": "object",
  "required": ["pastelvg", "content"],
  "properties": {
    "pastelvg": { "type": "string", "const": "0.1" },
    "width": { "type": "number" },
    "height": { "type": "number" },
    "viewBox": { "type": "array", "items": { "type": "number" }, "minItems": 4, "maxItems": 4 },
    "content": {
      "type": "array",
      "items": { "oneOf": [
        { "$ref": "https://pastelvg.github.io/specification/registry/elements/circle.json" },
        { "$ref": "https://pastelvg.github.io/specification/registry/elements/rect.json" },
        { "$ref": "https://pastelvg.github.io/specification/registry/elements/group.json" },
        { "$ref": "https://pastelvg.github.io/specification/registry/elements/text.json" }
      ]}
    }
  },
  "additionalProperties": false
}
